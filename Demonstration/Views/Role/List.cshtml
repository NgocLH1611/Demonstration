@{
}

@model List<Demonstration.Models.Entities.Role>

<h1>Roles</h1>

<td>
    <a class="btn btn-primary" asp-controller="Role" asp-action="Add">Add</a>
</td>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>