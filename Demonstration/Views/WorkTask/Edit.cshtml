@{
}

@model Demonstration.Models.Entities.WorkTask


<h1>Work Task</h1>

@if (Model is null)
{
    <p>No task was found with this ID!</p>
}
else
{

    <form method="post">

        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">Maximum Participants</label>
            <input type="number" class="form-control" asp-for="MaximumParticipants" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete"
                    asp-controller="WorkTask">
                Delete
            </button>
        </div>

    </form>
}