@model Demonstration.Models.Entities.WorkTask


<h1>Work Task</h1>

@if (Model is null)
{
    <p>No task was found with this ID!</p>
}
else
{

    <form method="post">

        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete"
                    asp-controller="User">
                Delete
            </button>
        </div>

    </form>

    <form asp-action="AssignEmployees" asp-controller="WorkTask" method="get">
        <input type="hidden" name="TaskId" value="@Model.Id" />

        <label for="UserId">Select User:</label>
        <select name="UserId" asp-items="ViewBag.UnassignedEmployees">
            <option value="">-- Select a User --</option>
        </select>

        <button type="submit">Assign</button>
    </form>
}