@{
}

@model List<Demonstration.Models.Entities.WorkTask>

<h1>Tasks</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Maximum Participants</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Name</td>
                <td>@(task.Description.Length > 50 ? task.Description.Substring(0, 50) + "..." : task.Description)</td>
                <td>@task.MaximumParticipants</td>
                <td>
                    <a class="btn btn-primary" asp-controller="WorkTask" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                    <a class="btn btn-info" asp-controller="WorkTask" asp-action="Detail" asp-route-id="@task.Id">Detail</a>
                    <a class="btn btn-danger" asp-controller="WorkTask" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>